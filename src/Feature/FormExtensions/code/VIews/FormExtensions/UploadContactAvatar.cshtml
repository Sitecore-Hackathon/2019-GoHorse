@using Sitecore.ExperienceForms.Mvc.Html
@model FaceLogin.Feature.FormExtensions.Fields.UploadContactAvatarViewModel

<label for="@Html.IdFor(m => Model.Value)" class="@Model.LabelCssClass">
    @Html.DisplayTextFor(t => Model.Title)
</label>
<input id="@Html.IdFor(m => Model.Value)" name="@Html.NameFor(m => Model.Value)" 
       class="@Model.CssClass" type="file" 
       value="@Model.Value" 
       data-sc-tracking="@Model.IsTrackingEnabled" 
       data-sc-field-name="@Model.Name" 
       data-sc-field-key="@Model.ConditionSettings.FieldKey" 
       @Html.GenerateUnobtrusiveValidationAttributes(m => m.Value) />
@Html.ValidationMessageFor(m => Model.Value)